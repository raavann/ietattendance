<!-- include header -->
<%- include('include/_header') %> 
<!-- /include header -->


    <!-- Main site -->

        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/"><i class="fas fa-angle-double-left"></i>Back</a>
                    </div>
                </div>
                
                <div class="form-title text-center">
                    <h2 class="text-dark">Update Class</h2>
                    <span class="text-light">Use the form below to Update new entry in time table</span>
                </div>

                <!-- form handling -->
                <form method="post" id="update">
                    <div class="new">

                        <div class="form-group">
                            <label for="Name" class="text-light">Name</label>
                            <input type="hidden" name="id" value="">
                            <input type="text" name="name" value="" placeholder="Mark stoke">
                        </div>

                        <div class="form-group">
                            <label for="Teacher" class="text-light">teacher Name</label>
                            <input type="text" name="teacher" value="" placeholder="Zuckerberg">
                        </div>
                        
                        <div class="form-group">
                            <label for="Start-Time" class="text-light">start time</label>
                            <input type="datetime-local" name="start-time" value="" >
                        </div>

                        <div class="form-group">
                            <label for="End-Time" class="text-light">End time</label>
                            <input type="datetime-local" name="end-time" value="" >
                        </div>

                        <div class="form-group">
                            <label for="Link" class="text-light">Link</label>
                            <input type="text" name="link" value="" >
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Submit</button>
                        </div>

                    </div>
                </form>


            </div>
        </main>
    
    <!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %> 
<!-- /include footer -->