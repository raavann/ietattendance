<!-- include header -->
<%- include('include/_header') %> 
<!-- /include header -->


    <!-- Main site -->

        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/"><i class="fas fa-angle-double-left"></i>Back</a>
                    </div>
                </div>
                
                <div class="form-title text-center">
                    <h2 class="text-dark">Update Class</h2>
                    <span class="text-light">Use the form below to Update new entry in time table</span>
                </div>

                <!-- form handling -->
                <form method="post" id="update">
                    <div class="new">

                        <div class="form-group">
                            <label for="subject" class="text-light">Subject</label>
                            <input type="hidden" name="id" value= "<%= data.id %>">
                            <input type="hidden" name="allocation" value="<%= allocation %> ">
                            <input type="text" name="subject" value= "<%= data.sub %>"  placeholder="Blehhhhhh just put in the subject" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="starttime" class="text-light">Start time</label>
                            <input type="datetime-local" name="starttime" value= "<%= data.st.slice(0,-1) %>"   required>
                        </div>

                        <div class="form-group">
                            <label for="endtime" class="text-light">End time</label>
                            <input type="datetime-local" name="endtime" value= <%= data.et.slice(0,-1) %>  required>
                        </div>

                        <div class="form-group">
                            <label for="Link" class="text-light">Link</label>
                            <input type="text" name="link" value= "<%= data.link %>"  required >
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Submit</button>
                        </div>

                    </div>
                </form>


            </div>
        </main>
    
    <!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %> 
<!-- /include footer -->